{
  "name": "mi-air-purifier-adapter",
  "display_name": "Mi Air Purifier",
  "version": "0.0.0",
  "description": "Mi Air Purifier adapter add-on for Mozilla WebThings Gateway",
  "author": "0x2206",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "mi",
    "air",
    "purifier"
  ],
  "homepage": "https://github.com/0x2206/mi-air-purifier-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x2206/mi-air-purifier-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/0x2206/mi-air-purifier-adapter/issues"
  },
  "dependencies": {
    "gateway-addon": "https://github.com/mozilla-iot/gateway-addon-node",
    "miio": "^0.15.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "css",
    "mi-air-purifier-adapter.js",
    "mi-air-purifier-api-handler.js",
    "index.js",
    "js",
    "manifest.json",
    "views"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "tokens": []
    },
    "schema": {
      "type": "object",
      "properties": {
        "tokens": {
          "description": "Tokens",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "deviceId",
              "token"
            ],
            "properties": {
              "deviceId": {
                "type": "number",
                "description": "Device ID"
              },
              "token": {
                "type": "string",
                "description": "Token"
              }
            }
          }
        }
      }
    }
  }
}
